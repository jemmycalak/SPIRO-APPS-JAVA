<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/layoutParkiran">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/paddingSmall">

            <TextView
                android:id="@+id/titleParkiran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PARKIRAN A"
                android:textSize="@dimen/textLarge"
                android:textColor="@color/darkGray"/>

            <TextView
                android:id="@+id/parkiran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ramayana Cimone Permai"
                android:textColor="@color/darkGray" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/paddingSmall">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="@dimen/paddingSmaller">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JUMLAH PARKIRAN TERSEDIA"
                    android:textSize="@dimen/textMediumer"
                    android:textColor="@color/darkGray"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/jumlahParkir"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@color/blueAccent"
                    android:padding="@dimen/paddingSmall"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v7.widget.CardView>