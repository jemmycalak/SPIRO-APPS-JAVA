<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.map.ReservasiSuccessFragment"
    android:background="@android:color/transparent"
    android:padding="@dimen/paddingLarge">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingMedium"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:gravity="center"
                android:text="Reservasi berhasil, silahkan menuju ke parkiran yang telah anda reservasi"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/textLarge"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/marginLarge"/>

            <Button
                android:id="@+id/btOk"
                android:text="OK"
                android:layout_margin="@dimen/marginMedium"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@color/blueAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>